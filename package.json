{
  "name": "speedscanner.org",
  "version": "0.1.0",
  "browserslist": "> 0.5%",
  "description": "Website for Speedscanner web performance monitoring. Hosted at speedscanner.org",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf ./_build",
    "compile": "run-s clean && run-p compile:*",
    "compile:html": "ELEVENTY_ENV=development eleventy",
    "compile:assets": "gulp compile --lint",
    "compile:scripts": "rollup -c",
    "build": "run-s clean && run-p build:*",
    "build:html": "eleventy",
    "build:assets": "gulp compile --production --lint",
    "build:scripts": "rollup -c --environment PRODUCTION",
    "watch": "run-s clean compile:assets compile:scripts && run-p watch:*",
    "watch:html": "ELEVENTY_ENV=development eleventy --serve --port=8000",
    "watch:assets": "gulp watch --lint",
    "watch:scripts": "rollup -c --watch",
    "dev": "npm run watch",
    "dist": "npm run build",
    "test": "npm run lint",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ignore-path .gitignore \"js/**/*.js\"",
    "lint:css": "stylelint --ignore-path .gitignore \"css/**/*.scss\"",
    "fix": "run-p fix:*",
    "fix:js": "eslint --ignore-path .gitignore \"js/**/*.js\" --fix",
    "fix:css": "stylelint --ignore-path .gitignore \"css/**/*.scss\" --fix",
    "demo": "npm run dist && surge _build/"
  },
  "author": "Alistair Shepherd <alistair@accudio.com>",
  "contributors": [
    "Alistair Shepherd <alistair@accudio.com>"
  ],
  "license": "MPL-2.0",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "ansi-colors": "^3.2.3",
    "async": "^3.1.1",
    "autoprefixer": "^9.4.4",
    "browser-sync": "^2.26.7",
    "eslint": "^5.3.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-purge-sourcemaps": "^1.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-stylelint": "^8.0.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-watch": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-clean": "^1.1.0",
    "postcss-focus-visible": "^4.0.0",
    "postcss-increase-specificity": "^0.6.0",
    "postcss-normalize": "^8.0.1",
    "postcss-plugin-context": "^2.0.0",
    "rollup-plugin-babel": "^4.4.0",
    "stylelint": "^9.4.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-scss": "^3.2.0",
    "yargs": "^12.0.5"
  },
  "dependencies": {
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@tbranyen/jsdom": "^13.0.0",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "focus-within-polyfill": "^5.0.4",
    "html-minifier": "^4.0.0",
    "markdown-it-image-lazy-loading": "^1.0.2",
    "markdown-it-imsize": "^2.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^5.3.0",
    "slugify": "^1.3.6"
  }
}
