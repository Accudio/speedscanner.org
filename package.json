{
  "name": "speedscanner.org",
  "version": "1.0.0",
  "browserslist": "> 1%, not dead",
  "description": "Website for Speedscanner web performance monitoring. Hosted at speedscanner.org",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf ./_build",
    "compile": "run-s clean && run-p compile:*",
    "compile:html": "ELEVENTY_ENV=development eleventy",
    "compile:assets": "parcel build js/*.js img/* --out-dir _build",
    "compile:styles": "parcel build css/*.scss --out-dir _build --public-url /css/",
    "build": "run-s clean && run-p build:*",
    "build:html": "eleventy",
    "build:assets": "parcel build js/*.js css/*.scss img/* --out-dir _build --no-source-maps",
    "watch": "run-s clean && run-p watch:*",
    "watch:html": "ELEVENTY_ENV=development eleventy --serve --port=8000",
    "watch:assets": "parcel watch js/*.js img/* --out-dir _build --no-hmr",
    "watch:styles": "parcel watch css/*.scss --out-dir _build/css/ --no-hmr --public-url /css/",
    "dev": "npm run watch",
    "dist": "npm run build",
    "test": "npm run lint",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ignore-path .gitignore \"js/**/*.js\"",
    "lint:css": "stylelint --ignore-path .gitignore \"css/**/*.scss\"",
    "fix": "run-p fix:*",
    "fix:js": "eslint --ignore-path .gitignore \"js/**/*.js\" --fix",
    "fix:css": "stylelint --ignore-path .gitignore \"css/**/*.scss\" --fix"
  },
  "author": "Alistair Shepherd <alistair@accudio.com> (https://alistairshepherd.uk/)",
  "homepage": "https://speedscanner.org/",
  "license": "MPL-2.0",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@babel/core": "^7.9.6",
    "autoprefixer": "^9.4.4",
    "browser-sync": "^2.26.7",
    "eslint": "^5.3.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-focus-visible": "^4.0.0",
    "postcss-increase-specificity": "^0.6.0",
    "postcss-normalize": "^8.0.1",
    "postcss-plugin-context": "^2.0.0",
    "stylelint": "^9.4.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-scss": "^3.2.0"
  },
  "dependencies": {
    "@babel/preset-env": "^7.9.5",
    "@tbranyen/jsdom": "^13.0.0",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "focus-within-polyfill": "^5.0.4",
    "html-minifier": "^4.0.0",
    "markdown-it-image-lazy-loading": "^1.0.2",
    "markdown-it-imsize": "^2.0.1",
    "node-sass": "^4.14.1",
    "node-sass-glob-importer": "^5.3.2",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "slugify": "^1.3.6"
  }
}
